<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="lesson"
            type="com.example.edudemo.data.local.courses.Lesson" />
    </data>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.quizzer.question"
            android:background="@color/lazy_gray">

            <ImageView
                android:id="@+id/question_canceller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="32dp"
                android:src="@drawable/cancel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="135dp"
                android:layout_height="76dp"
                android:layout_marginTop="48dp"
                android:src="@drawable/question"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
<!--
            <EditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="196dp"

                android:minHeight="48dp"
                android:text="Input"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/question_lesson_question" />
-->

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/appleWhite"
                app:layout_constraintTop_toBottomOf="@id/question_lesson_question"
                app:layout_constraintBottom_toTopOf="@id/question_check"
                android:hint="Answer Here"
                android:id="@+id/question_answer_intake_layout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/question_answer_intake"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:inputType="text"
                android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/question_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="23dp"
                android:layout_marginBottom="48dp"
                android:text=" sumbit"
                android:backgroundTint="@color/nice_light_green"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.355"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/question_answer_intake_layout"
                app:layout_constraintVertical_bias="0.804" />

            <TextView
                android:id="@+id/question_lesson_question"
                android:layout_width="409dp"
                android:layout_height="119dp"
                android:layout_marginTop="64dp"
                android:padding="24dp"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView8" />
        </androidx.constraintlayout.widget.ConstraintLayout>

</layout>