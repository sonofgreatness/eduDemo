<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lazy_gray"
    xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lazy_gray"
    tools:context=".ui.userprogress.UserProgress">

    <TextView
        android:id="@+id/userprogressHeaderText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/chakra_petch_light"
        android:text="@string/your_progress_so_far"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_horizontal" />

    <RelativeLayout
        android:id= "@+id/CardviewRelativeLayout"
        android:layout_marginTop="64dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/userprogressHeaderText">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@color/nice_light_green"
            android:backgroundTint="@color/nice_light_green"
            android:elevation="20dp"
            android:outlineAmbientShadowColor="@color/lazy_gray"
            android:layout_marginTop="40dp">
            <TextView
                android:id="@+id/UserProgressText"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:textAlignment="center"
                android:fontFamily="@font/chakra_petch_bold"
                android:text="@string/hello_blank_fragment"
                android:textSize="26sp"
                android:gravity="center_horizontal" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <ImageView
        android:id="@+id/rewardImageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/lock"
        app:layout_constraintDimensionRatio="2:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/CardviewRelativeLayout"></ImageView>
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>