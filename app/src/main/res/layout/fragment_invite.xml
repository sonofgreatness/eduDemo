<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Invite.InviteFragment">
    <ImageView
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id = "@+id/invite_cancellerIcon"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/invite_headerTitle"
        android:text="Spread the word about this app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/invite_supportText"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="@id/invite_headerTitle"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">
<com.google.android.material.button.MaterialButton
    android:id="@+id/invite_button"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:backgroundTint="@color/nice_light_green"
    android:text="SHARE INVITE LINK"
    android:drawableStart="@drawable/white_share"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>