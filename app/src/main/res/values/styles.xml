<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="hintTextColor">@color/appleWhite</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="shapeAppearanceOverlay">
            @style/TextInputLayout.Rounded
        </item>
        <item name="boxStrokeColor">@color/not_so_nice_light_green</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">32dp</item>

    </style>


    <style name="TextInputLayout.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">32dp</item>
    </style>

    <style name = "white_text">
        <item name = "android:textSize">24sp</item>
        <item name = "android:fontFamily">@font/chakra_petch_bold</item>
        <item name = "android:textStyle">bold</item>
        <item name = "android:textColor">@color/white</item>>
    </style>

    <style name="HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name = "black_text_heading">
        <item name = "android:textSize">32sp</item>
        <item name = "android:fontFamily">@font/chakra_petch_bold</item>
        <item name = "android:textStyle">bold</item>
        <item name = "android:textColor">@color/Charcoal</item>>
    </style>
</resources>


